    "@tsconfig/svelte": "^5.0.4",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.7",
    "cross-env": "^7.0.3",
    "svelte": "^5.0.3",
    "svelte-check": "^4.0.5",
    "tslib": "^2.8.0",
    "typescript": "~5.6.3",
    "vite": "^5.4.9"
  }
}
